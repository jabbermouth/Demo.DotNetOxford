@using Demo.DotNetOxford.Blog

@inject IBlogRepository blogRepository

@if (blogRepository.Posts().Any())
{
    foreach(var post in blogRepository.Posts())
    {
        <div>
            <h2>@post.Title</h2>
            <p>@post.Content</p>
        </div>
    }
}
else
{
    <p>
        No blogs available
    </p>
}

